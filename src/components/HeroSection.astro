---
// src/components/HeroSection.astro
import Button from "./Button.astro";

const tagline = "build silent // ship loud";
const subheadline =
    "Architecting platforms at the intersection of software, systems, and scale.";
---

<section
    class="h-screen flex flex-col justify-center items-center text-center px-4"
>
    <div class="max-w-3xl">
        <h1
            class="font-mono text-4xl md:text-6xl font-bold mb-4 text-electric-blue"
        >
            {tagline}
        </h1>
        <p
            class="font-sans text-xl md:text-2xl mb-2 text-gray-700 dark:text-gray-300"
        >
            {subheadline}
        </p>
        <div class="flex justify-center space-x-4">
            <!-- <Button href="#connect" variant="secondary">Connect</Button> -->
        </div>
    </div>
</section>
