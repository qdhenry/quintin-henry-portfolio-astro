---
// src/components/ProjectCard.astro
interface Props {
	title: string;
	description: string;
	roleStack: string; // Combined Role / Stack for simplicity
	impact: string;
	imageUrl?: string; // Optional image
	imageAlt?: string;
}

const { title, description, roleStack, impact, imageUrl, imageAlt = '' } = Astro.props;
---

<div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden transition-shadow duration-300 hover:shadow-lg">
	{imageUrl && (
		<img src={imageUrl} alt={imageAlt} class="w-full h-48 object-cover" />
	)}
	<div class="p-6">
		<h3 class="font-mono text-xl font-bold mb-2 text-electric-blue dark:text-electric-blue">{title}</h3>
		<p class="text-gray-700 dark:text-gray-300 mb-4">{description}</p>
		<div class="text-sm text-gray-600 dark:text-gray-400 space-y-2">
			<p><strong class="font-semibold text-gray-800 dark:text-gray-200">Role/Stack:</strong> {roleStack}</p>
			<p><strong class="font-semibold text-gray-800 dark:text-gray-200">Impact:</strong> {impact}</p>
		</div>
	</div>
</div>